<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/keypad_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:ignore="SpUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/keypad_value_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="2"
            android:gravity="center"
            tools:ignore="NestedWeights">
            <TextView
                android:id="@+id/common_keypad_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#cccccc"
                android:textStyle="bold"
                android:textSize="64dp"
                android:gravity="center"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/common_keypad_units"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:textColor="#999999"
                android:textSize="24dp"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:id="@+id/keypad_value_container_padding"
            android:layout_width="2dp"
            android:background="#FF000000"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/common_keypad_back_button"
            android:layout_marginStart="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/icon_delete"
            android:contentDescription="@null" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:divider="@drawable/keypad_divider"
        android:showDividers="middle"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/common_keypad_1_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            tools:ignore="HardcodedText,NestedWeights"
            android:textColor="#000000"
            android:textSize="48dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/common_keypad_2_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:textColor="#000000"
            android:textSize="48dp"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/common_keypad_3_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            android:textColor="#000000"
            android:textSize="48dp"
            android:gravity="center"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:divider="@drawable/keypad_divider"
        android:showDividers="middle"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/common_keypad_4_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="4"
            android:textColor="#000000"
            android:textSize="48dp"
            android:gravity="center"
            tools:ignore="HardcodedText,NestedWeights" />

        <Button
            android:id="@+id/common_keypad_5_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="5"
            android:textColor="#000000"
            android:textSize="48dp"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/common_keypad_6_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="6"
            android:textColor="#000000"
            android:textSize="48dp"
            android:gravity="center"
            tools:ignore="HardcodedText" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:divider="@drawable/keypad_divider"
        android:showDividers="middle"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/common_keypad_7_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="7"
            android:textColor="#000000"
            android:textSize="48dp"
            android:gravity="center"
            tools:ignore="HardcodedText,NestedWeights" />

        <Button
            android:id="@+id/common_keypad_8_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="8"
            android:textColor="#000000"
            android:textSize="48dp"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/common_keypad_9_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="9"
            android:textColor="#000000"
            android:textSize="48dp"
            android:gravity="center"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:paddingEnd="1dp"
            tools:ignore="NestedWeights,RtlSymmetry">

            <Button
                android:id="@+id/common_keypad_0_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="#000000"
                android:textSize="48dp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/common_keypad_confirm_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="#000000"
            android:src="@drawable/button_key_confirm_src"
            android:textSize="48dp"
            android:contentDescription="@string/confirm_tc" />

    </LinearLayout>


</LinearLayout>