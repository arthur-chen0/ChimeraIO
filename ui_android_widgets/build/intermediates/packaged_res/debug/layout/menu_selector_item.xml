<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/selector_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_item_background"
        tools:ignore="UselessParent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/selector_item_text_margin"
            android:paddingEnd="@dimen/selector_item_text_end_margin">
            <RelativeLayout
                android:id="@+id/menu_selector_image_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp">
                <ImageView
                    android:id="@+id/menu_selector_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"/>
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/selector_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:gravity="center_vertical|start"
                android:textColor="@color/selector_text_color"
                android:textSize="@dimen/selector_item_text_size"
                app:autoSizeMaxTextSize="@dimen/selector_item_text_size"
                app:autoSizeTextType="uniform"
                android:textStyle="bold"
                tools:ignore="SpUsage" />
        </LinearLayout>

        <ImageView
            android:id="@+id/selector_arrow"
            android:layout_width="@dimen/selector_arrow_size"
            android:layout_height="@dimen/selector_arrow_size"
            android:rotation="@integer/selector_arrow_rotation"
            android:layout_marginEnd="@dimen/selector_arrow_margin"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:contentDescription="@null"
            android:src="@drawable/selector_arrow"/>

        <ImageView
            android:id="@+id/selector_arrow_down"
            android:layout_width="@dimen/selector_arrow_size"
            android:layout_height="@dimen/selector_arrow_size"
            android:visibility="gone"
            android:rotation="180"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/selector_arrow_down_margin"
            android:layout_marginTop="@dimen/selector_arrow_down_margin_top"
            android:contentDescription="@null"
            android:src="@drawable/selector_arrow"/>
    </RelativeLayout>
</RelativeLayout>
