<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/selector_item_height"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_item_background"
        android:orientation="horizontal"
        android:paddingStart="@dimen/selector_item_text_margin"
        tools:ignore="RtlSymmetry,UselessParent">
        <RelativeLayout
            android:id="@+id/selector_item_base_pre_image_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp">
            <ImageView
                android:id="@+id/selector_item_base_pre_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:focusable="true" />
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/selector_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:paddingEnd="@dimen/selector_item_text_end_margin"
            android:gravity="center_vertical|start"
            android:textColor="@color/selector_text_color"
            android:textSize="@dimen/selector_item_text_size"
            app:autoSizeMaxTextSize="@dimen/selector_item_text_size"
            app:autoSizeTextType="uniform"
            android:textStyle="bold"
            tools:ignore="SpUsage" />


        <RelativeLayout
            android:id="@+id/selector_item_base_post_image_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp">
            <ImageView
                android:id="@+id/selector_item_base_post_image"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:focusable="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/selector_item_base_busy_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/selector_item_base_busy"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_spinner"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
