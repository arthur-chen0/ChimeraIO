<resources>


    <style name="jht_standard_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/standard_container_border</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="jht_standard_inner_recycle_container_no_scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="jht_standard_inner_recycle_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarSize">5dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbarTrackVertical">@color/scrollbar_track</item>
        <item name="android:scrollbarThumbVertical">@color/scrollbar_thumb</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
    </style>


    <style name="jht_default_keyboard">
        <item name="keypad_number_key_background">@drawable/keypad_button_background</item>
        <item name="keypad_value_background">@android:color/black</item>
        <item name="keypad_back_key_background">@drawable/keypad_back_button_background</item>
        <item name="keypad_confirm_key_background">@drawable/button_key_confirm_background</item>
        <item name="keypad_confirm_key_src">@drawable/button_key_confirm</item>
        <item name="keypad_background">@color/keypad_default_background</item>
        <item name="keypad_auto_hide">0</item>
    </style>

</resources>