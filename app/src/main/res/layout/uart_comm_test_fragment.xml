<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/EngineeringPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/selector_device_path"
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:layout_columnWeight="1"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp" />

            <Spinner
                android:id="@+id/selector_baud_rate"
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:layout_columnWeight="1"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp" />

            <Button
                android:id="@+id/btn_open"
                style="@style/GeneralEngineeringButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:text="open" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_data"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp" />

            <Button
                android:id="@+id/btn_write"
                style="@style/GeneralEngineeringButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:text="write" />

            <Button
                android:id="@+id/btn_clear"
                style="@style/GeneralEngineeringButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:text="clear" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/GeneralEngineeringTextHeading"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="Stress Test"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/GeneralEngineeringTextHeading"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="No. Interation" />

            <EditText
                android:id="@+id/edtxt_no_interation"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:inputType="number" />

            <Button
                android:id="@+id/btn_stress_start"
                style="@style/GeneralEngineeringButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="start" />

            <Button
                android:id="@+id/btn_stress_stop"
                style="@style/GeneralEngineeringButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="stop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/GeneralEngineeringTextHeading"
                android:layout_width="150dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="Received data" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ResultScrollView">

            <TextView
                android:id="@+id/text_received_data"
                style="@style/GeneralEngineeringTextHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:scrollbars="vertical"
                android:singleLine="false" />
        </ScrollView>
    </LinearLayout>
</RelativeLayout>